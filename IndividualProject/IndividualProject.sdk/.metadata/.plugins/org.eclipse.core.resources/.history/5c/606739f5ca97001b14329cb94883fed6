#ifndef SRC_SPRITES_H_
#define SRC_SPRITES_H_

#include "led_matrix.h"


// Defines


// Variables


// Structs
typedef struct cannon_t {
	position_t core;
	position_t left_arm;
	position_t right_arm;
	position_t head;
	color_t colors;
	// u8 hp;
	// u8 speed;
	// u8 other variables for defining characteristics;
} cannon_t;

typedef struct bullet_t {
	position_t core;
	color_t colors;
} bullet_t;

typedef struct smallUFO_t {
	position_t left;
	position_t right;
	color_t colors;
	u8 health;
	u8 speed_timer;
} smallUFO_t;

typedef struct mediumUFO_t {
	position_t core;
	position_t left;
	position_t right;
	color_t colors;
	u8 health;
	u8 speed_timer;
} mediumUFO_t;

typedef struct bigUFO_t {
	position_t core;
	position_t left;
	position_t right;
	position_t core_up;
	position_t left_up;
	position_t right_up;
	color_t colors;
	u8 health;
	u8 speed_timer;
} bigUFO_t;

// Function prototypes
cannon_t draw_cannon(position_t pos);
u8 move_left_cannon(cannon_t *sprite);
u8 move_right_cannon(cannon_t *sprite);

smallUFO_t draw_small(position_t pos);
u8 move_down_small(smallUFO_t *sprite);

mediumUFO_t draw_medium(position_t pos);
u8 move_down_medium(mediumUFO_t *sprite);

bigUFO_t draw_big(position_t pos);
u8 move_down_big(bigUFO_t *sprite);


#endif /* SRC_SPRITES_H_ */
