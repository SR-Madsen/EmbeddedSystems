#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/mman.h>

// Make UART debug output work
#define printf(...) \
	fprintf(stdout, __VA_ARGS__); \
	fflush(stdout);

typedef long int u32;

int main()
{
    unsigned int bram_size = 0x2000;
    off_t bram_pbase = 0x40000000;
    u32 *bram32_vptr;
    int file;

    // Map the BRAM physical address into user space by getting a virtual address
    if ((file = open ("/dev/mem", O_RDWR | O_SYNC)) != -1) {
    	bram32_vptr = (u32*) mmap(NULL, bram_size, PROT_READ | PROT_WRITE, MAP_SHARED, file, bram_pbase);

    	// Write to the memory
    	bram32_vptr[0] = 0xDEADBEEF;
    	bram32_vptr[1] = 0xFACEB00C;
    } else {
    	printf("Failed at getting virtual address.");
    }

    return 0;
}
